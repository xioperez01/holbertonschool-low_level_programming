#include "holberton.h"
/**
 * print_triangle - prints a triangle
 *@size: is the size of the triangle
 */
void print_triangle(int size)
{
	int r, c, simb;

	if (size <= 0)
	{
		putchar('\n');
	}
	for (r = 1; r <= size; r++)
	{
		for (c = 1; r <= (r - size); c++)
		{
			putchar(' ');
		}
		for (simb = 1; simb <= r; simb++)
		{
			putchar('#');
		}
		putchar('\n');
	}
}
